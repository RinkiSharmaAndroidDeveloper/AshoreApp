<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_text_add_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add Location"
            android:textColor="@color/splash_color"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/value_twenty"
            android:background="@color/color_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_ten"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/popup_image_icon_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/value_ten"
                android:layout_marginTop="@dimen/value_five"
                android:background="@mipmap/location_icon"
                android:contentDescription="@string/text_location"
                android:padding="@dimen/value_four" />

            <EditText
                android:id="@+id/popup_edittext_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_fourty"
                android:layout_marginEnd="@dimen/value_twenty"
                android:background="@android:color/transparent"
                android:hint="Search by Zip Code or City &amp; State"
                android:inputType="text"
                android:maxLines="2"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textSize="14sp"
                android:textCursorDrawable="@null"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/value_twenty"
            android:layout_marginLeft="@dimen/value_twenty"
            android:layout_marginRight="@dimen/value_twenty"
            android:layout_marginStart="@dimen/value_twenty"
            android:background="@color/dark_gray"/>

        <Button
            android:id="@+id/popup_button_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_fifty"
            android:layout_marginTop="@dimen/value_fourty"
            android:background="@color/splash_color"
            android:layout_marginLeft="@dimen/value_ten"
            android:layout_marginRight="@dimen/value_ten"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/color_white"
            android:textSize="22sp" />

    </LinearLayout>

</RelativeLayout>