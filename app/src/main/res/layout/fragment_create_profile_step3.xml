<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/layout_discover_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_text_discover_people_search"
                    android:layout_width="match_parent"
                    android:hint="Discover People"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_people"
                    android:layout_below="@+id/edit_text_discover_people_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_discover_community"
                android:layout_width="match_parent"
                android:layout_below="@+id/layout_discover_people"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_text_discover_community_search"
                    android:layout_width="match_parent"
                    android:hint="Discover Communities"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_community"
                    android:layout_below="@+id/edit_text_discover_community_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
