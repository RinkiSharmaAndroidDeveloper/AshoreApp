<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/value_fifteen"
        android:layout_marginTop="@dimen/value_fifteen">



        <com.trutek.looped.msas.common.views.maskedimageview.MaskedImageView
            android:id="@+id/image_view_my_connection"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:mask="@drawable/border_rounded_corner_image"
            android:src="@drawable/default_profile_icon" />

        <TextView
            android:id="@+id/text_view_my_connection_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_four"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@+id/image_view_my_connection"
            android:layout_alignStart="@+id/image_view_my_connection"
            android:layout_alignEnd="@id/image_view_my_connection"
            android:maxLines="1"
            android:text="@string/text_name"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/text_view_chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_thirty_five"
            android:background="@drawable/border_button"
            android:gravity="center"
            android:padding="7dp"
            android:layout_marginLeft="@dimen/value_ten"
            android:layout_marginRight="@dimen/value_ten"
            android:layout_marginTop="@dimen/value_five"
            android:text="@string/text_single_chat"
            android:visibility="gone"
            android:textColor="@color/button_color" />


    </RelativeLayout>
</RelativeLayout>