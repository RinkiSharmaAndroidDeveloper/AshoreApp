<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_five"
        android:layout_marginEnd="@dimen/value_five"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_option_textView_reportAbuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/value_fifty"
            android:gravity="center"
            android:text="@string/dialog_option_text_reportAbuse"
            android:textColor="@color/primary_700"
            android:textSize="@dimen/text_header"
            android:layout_marginTop="@dimen/value_ten"
            android:layout_marginBottom="@dimen/value_ten"
            android:layout_marginStart="@dimen/value_ten"
            android:layout_marginEnd="@dimen/value_ten"
            android:background="@drawable/border_edit_text_msg"
            />

        <TextView
            android:id="@+id/dialog_option_textView_unFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/value_fifty"
            android:gravity="center"
            android:text="@string/dialog_option_text_unFriend"
            android:textColor="@color/primary_700"
            android:textSize="@dimen/text_header"
            android:layout_marginTop="@dimen/value_ten"
            android:layout_marginBottom="@dimen/value_ten"
            android:layout_marginStart="@dimen/value_ten"
            android:layout_marginEnd="@dimen/value_ten"
            android:background="@drawable/border_edit_text_msg"
            />

        <TextView
            android:id="@+id/dialog_option_textView_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/value_fifty"
            android:gravity="center"
            android:text="@string/dialog_option_text_delete"
            android:textColor="@color/primary_700"
            android:textSize="@dimen/text_header"
            android:layout_marginTop="@dimen/value_ten"
            android:layout_marginBottom="@dimen/value_ten"
            android:layout_marginStart="@dimen/value_ten"
            android:layout_marginEnd="@dimen/value_ten"
            android:background="@drawable/border_edit_text_msg"
            />

        <TextView
            android:id="@+id/dialog_option_textView_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/value_fifty"
            android:gravity="center"
            android:text="@string/dialog_option_text_cancel"
            android:textColor="@color/primary_700"
            android:textSize="@dimen/text_header"
            android:layout_marginTop="@dimen/value_ten"
            android:layout_marginBottom="@dimen/value_ten"
            android:layout_marginStart="@dimen/value_ten"
            android:layout_marginEnd="@dimen/value_ten"
            android:background="@drawable/border_edit_text_msg"
            />

    </LinearLayout>




</LinearLayout>