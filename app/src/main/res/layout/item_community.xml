<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/list_community_dashboard_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_sixty"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="3.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/value_ten"
            android:layout_marginStart="@dimen/value_ten"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_community_dashboard_dot"
                android:layout_width="@dimen/value_seven"
                android:layout_height="@dimen/value_seven"
                android:background="@drawable/dot"
                android:gravity="center"
                android:text="@string/text_two"
                android:textColor="@color/splash_color"
                android:textSize="22sp" />

            <com.trutek.looped.msas.common.views.maskedimageview.MaskedImageView
                android:layout_marginLeft="@dimen/value_ten"
                android:src="@drawable/default_profile_icon"
                android:id="@+id/list_community_dashboard_dashboard_image"
                android:layout_width="@dimen/value_fifty"
                android:layout_height="@dimen/value_fifty"
                android:scaleType="centerCrop"
                app:mask="@drawable/rounded_corner_discussion"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="@dimen/value_five"
                android:gravity="center">

                <TextView
                    android:id="@+id/list_community_dashboard_sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="@dimen/value_ten"
                    android:layout_marginStart="@dimen/value_ten"
                    android:gravity="center"
                    android:text="@string/text_sender_name"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/list_community_dashboard_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="@dimen/value_five"
                    android:layout_marginLeft="@dimen/value_ten"
                    android:layout_marginStart="@dimen/value_ten"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/text_message"
                    android:ellipsize="end"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="end|center"
            android:layout_marginRight="@dimen/value_fifteen"
            android:layout_marginEnd="@dimen/value_fifteen"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/community_dashboard_image_icon"
                android:layout_width="@dimen/value_fifteen"
                android:layout_height="@dimen/value_twenty_five"
                android:background="@mipmap/right_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dashboard_title_color">
    </LinearLayout>

</LinearLayout>