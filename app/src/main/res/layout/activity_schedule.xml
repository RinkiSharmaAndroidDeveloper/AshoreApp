<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_color">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/value_fourty"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/value_fifteen"
            android:text="@string/text_medicine_schedule"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_header" />

        <ImageView
            android:id="@+id/schedule_back_arrow"
            android:layout_width="@dimen/value_thirty_five"
            android:layout_height="@dimen/value_thirty_five"
            android:layout_marginTop="@dimen/value_nine"
            android:gravity="left"
            android:padding="@dimen/value_five"
            android:src="@mipmap/right_arrow_toolbar" />


        <ImageView
            android:id="@+id/scedule_image_done"
            android:layout_width="@dimen/value_sixty"
            android:layout_height="@dimen/value_thirty"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_gravity="end"
            android:layout_marginRight="0dp"
            android:gravity="center|right"
            android:src="@mipmap/tick_icon"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frequency_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_ten"
        android:background="@drawable/border_rectangular_medicine_info"
        android:orientation="vertical"
        android:padding="@dimen/value_fifteen">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/value_six"
                android:text="@string/text_medicine_frequency"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_header" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/toggleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/schedule_frequency_sun"
                android:layout_width="@dimen/value_seventy"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/selected_unselected_radio_button"
                android:padding="@dimen/value_ten"
                android:text="Sun"
                android:onClick="onCheckboxClicked"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/schedule_frequency_mon"
                android:layout_width="@dimen/value_seventy"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/selected_unselected_radio_button"
                android:padding="@dimen/value_eight"
                android:onClick="onCheckboxClicked"
                android:text="Mon"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/schedule_frequency_tue"
                android:layout_width="@dimen/value_seventy"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/selected_unselected_radio_button"
                android:padding="@dimen/value_eight"
                android:onClick="onCheckboxClicked"
                android:text="Tue"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/schedule_frequency_wed"
                android:layout_width="@dimen/value_seventy"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/selected_unselected_radio_button"
                android:padding="@dimen/value_eight"
                android:onClick="onCheckboxClicked"
                android:text="Wed"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/schedule_frequency_thu"
                android:layout_width="@dimen/value_seventy"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/selected_unselected_radio_button"
                android:padding="@dimen/value_eight"
                android:text="Thu"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/schedule_frequency_fri"
                android:layout_width="@dimen/value_seventy"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/selected_unselected_radio_button"
                android:padding="@dimen/value_eight"
                android:text="Fri"
                android:onClick="onCheckboxClicked"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/schedule_frequency_sat"
                android:layout_width="@dimen/value_seventy"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@drawable/selected_unselected_radio_button"
                android:padding="@dimen/value_eight"
                android:text="Sat"
                android:onClick="onCheckboxClicked"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/medicine_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_one_hundred_eighty"
        android:layout_margin="@dimen/value_ten"
        android:background="@drawable/border_rectangular_medicine_info"
        android:orientation="vertical"
        android:padding="@dimen/value_fifteen">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/value_six"
                android:text="@string/text_medicine_duration"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_header" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_schedule_recycler_medicine_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_dark">

        <TextView
            android:id="@+id/activity_schedule_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/value_fourty"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/value_fifteen"
            android:padding="@dimen/value_five"
            android:text="@string/text_ok"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_header" />

        <TextView
            android:id="@+id/activity_schedule_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/activity_schedule_ok"
            android:layout_marginLeft="@dimen/value_fifteen"
            android:gravity="left"
            android:padding="@dimen/value_five"
            android:text="@string/text_cancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_header" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <TimePicker
        android:id="@+id/activity_schedule_simpleTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/value_ten"
        android:numbersTextColor="@color/theme_dark"
        android:timePickerMode="spinner" />

</LinearLayout>