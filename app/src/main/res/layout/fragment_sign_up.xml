<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/color_white" android:orientation="vertical"
    tools:context="com.trutek.looped.ui.authenticate.SignUpFragment">

    <LinearLayout
        android:id="@+id/signup_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/asu_layout_verify_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/asu_image_phone"
                android:layout_width="@dimen/value_twenty"
                android:layout_height="@dimen/value_twenty"
                android:layout_marginBottom="@dimen/value_ten"
                android:layout_marginLeft="@dimen/value_fifteen"
                android:layout_marginStart="@dimen/value_fifteen"
                android:layout_marginTop="@dimen/value_thirty"
                android:background="@mipmap/phone_icon"
                android:contentDescription="@string/text_phoneNumber"
                android:padding="@dimen/value_four" />

            <EditText
                android:id="@+id/asu_edit_text_phone_number"
                android:layout_width="match_parent"
                android:textCursorDrawable="@null"
                android:layout_height="@dimen/value_fourty"
                android:layout_marginEnd="@dimen/value_thirty"
                android:layout_marginLeft="@dimen/value_ten"
                android:layout_marginRight="@dimen/value_thirty"
                android:layout_marginStart="@dimen/value_ten"
                android:layout_marginTop="@dimen/value_twenty"
                android:background="@android:color/transparent"
                android:hint="@string/text_phoneNumber"
                android:inputType="phone"
                android:singleLine="true"
                android:textColorHint="@color/dark_gray"
                android:textColor="@color/dark_gray"
                android:textSize="18sp"
                android:cursorVisible="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/value_fifteen"
            android:layout_marginLeft="@dimen/value_fifteen"
            android:layout_marginRight="@dimen/value_fifteen"
            android:layout_marginStart="@dimen/value_fifteen"
            android:background="@color/color_light_gray"
            android:gravity="center" />

        <Button
            android:id="@+id/asu_btn_verify"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/value_fifteen"
            android:layout_marginLeft="@dimen/value_fifteen"
            android:layout_marginRight="@dimen/value_fifteen"
            android:layout_marginStart="@dimen/value_fifteen"
            android:layout_marginTop="@dimen/value_twenty"
            android:background="@drawable/border_button"
            android:text="@string/text_verify"
            android:textColor="@color/splash_color"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/asu_text_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_text_or"
            android:gravity="center"
            android:text="@string/text_or"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sign_in_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/value_twenty"
            android:layout_marginEnd="@dimen/value_fifteen"
            android:layout_marginLeft="@dimen/value_fifteen"
            android:layout_marginRight="@dimen/value_fifteen"
            android:layout_marginStart="@dimen/value_fifteen"
            android:layout_marginTop="@dimen/value_ten"
            android:textSize="16sp"
            android:paddingTop="@dimen/value_fifteen"
            android:paddingBottom="@dimen/value_fifteen"
            android:text="Connect With Facebook"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:background="@color/fb_button_background"/>

    </LinearLayout>

</RelativeLayout>
