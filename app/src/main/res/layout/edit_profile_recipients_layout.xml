<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/edit_profile_card_view_recipients"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_hundred"
        android:layout_margin="@dimen/value_seven"
        app:cardBackgroundColor="@color/color_white"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_thirty_five"
                android:background="@color/dashboard_title_color"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_thirty_five"
                    android:layout_weight=".3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/edit_profile_title_recipients"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/value_thirty_five"
                        android:layout_gravity="center"
                        android:background="@color/dashboard_title_color"
                        android:gravity="center"
                        android:text="@string/text_recipients"
                        android:textColor="@color/color_white"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_recipient_plus_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_thirty_five"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/recipient_image_plus_icon"
                        android:layout_width="@dimen/value_thirty"
                        android:layout_height="@dimen/value_twenty_five"
                        android:background="@mipmap/green_plus_icon"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/text_add_recipient_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/value_fifteen"
                android:gravity="center"
                android:text="Do you wanna Add Recipient Here" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>