<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/settings_card_view_my_family_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_seven"
        app:cardBackgroundColor="@color/color_white"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/edit_profile_editable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_thirty_five"
                android:background="@color/dashboard_title_color"
                android:gravity="center"
                android:text="@string/text_details"
                android:textColor="@color/color_white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_fifteen"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/gender_icon" />


                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/value_ten"
                    android:layout_marginStart="@dimen/value_ten"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_sub_header"
                    android:textColor="@color/primary_text_color"
                    android:background="@android:color/transparent"
                    android:hint="@string/text_male"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_ten"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/birthday_icon" />

                <TextView
                    android:id="@+id/txt_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_ten"
                    android:layout_marginStart="@dimen/value_ten"
                    android:textColor="@color/primary_text_color"
                    android:background="@android:color/transparent"
                    android:hint="@string/edit_prof_text_birthday"
                    android:textSize="@dimen/text_sub_header"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_fifteen"
                android:layout_marginTop="@dimen/value_ten"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/location_icon" />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_sub_header"
                    android:background="@android:color/transparent"
                    android:textColor="@color/primary_text_color"
                    android:hint="@string/text_location"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>