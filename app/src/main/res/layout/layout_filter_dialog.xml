<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_margin="@dimen/value_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/value_twenty"
            android:layout_marginRight="@dimen/value_ten"
            android:layout_marginLeft="@dimen/value_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:gravity="top"
                    android:id="@+id/filter_dialog_image_star_interest"
                    android:layout_width="@dimen/value_thirty"
                    android:layout_height="@dimen/value_thirty"
                    android:layout_margin="@dimen/value_ten"
                    android:background="@mipmap/star_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/value_twenty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="10">
                <TextView
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/dark_gray"
                    android:layout_marginLeft="@dimen/value_ten"
                    android:inputType="textCapWords"
                    android:id="@+id/filter_dialog_edit_text_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/category"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/value_ten"
                android:layout_marginRight="@dimen/value_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="10">

                <ImageView
                    android:id="@+id/filter_dialog_image_arrow_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/rightarrow" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/value_seven"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/value_fifteen"
            android:layout_marginLeft="@dimen/value_fifteen"
            android:background="@color/dark_gray" />

        <LinearLayout
            android:layout_marginTop="@dimen/value_twenty"
            android:layout_marginRight="@dimen/value_ten"
            android:layout_marginLeft="@dimen/value_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:gravity="top"
                    android:id="@+id/filter_dialog_image_star_topics"
                    android:layout_width="@dimen/value_thirty"
                    android:layout_height="@dimen/value_thirty"
                    android:layout_margin="@dimen/value_ten"
                    android:background="@mipmap/star_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/value_twenty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="10">
                <TextView
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/dark_gray"
                    android:layout_marginLeft="@dimen/value_ten"
                    android:id="@+id/filter_dialog_edit_text_topics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/topics"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/value_ten"
                android:layout_marginRight="@dimen/value_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="10">
                <ImageView
                    android:layout_weight="10"
                    android:id="@+id/filter_dialog_image_arrow_topics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/rightarrow" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/value_seven"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/value_fifteen"
            android:layout_marginLeft="@dimen/value_fifteen"
            android:background="@color/dark_gray" />

        <LinearLayout
            android:layout_marginLeft="@dimen/value_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/value_ten">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/filter_dialog_image_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_five"
                    android:background="@mipmap/location_icon" />
                <TextView
                    android:textColorHint="@color/dark_gray"
                    android:textColor="@color/dark_gray"
                    android:layout_marginLeft="@dimen/value_nine"
                    android:inputType="textCapWords"
                    android:id="@+id/filter_dialog_edit_text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/location"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/value_ten"
                android:layout_marginLeft="@dimen/value_ten"
                android:layout_marginRight="@dimen/value_ten"                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <SeekBar
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/seekbar_drawable"
                    android:layout_marginTop="@dimen/value_ten"
                    android:layout_marginLeft="@dimen/value_ten"
                    android:layout_marginRight="@dimen/value_ten"
                    android:id="@+id/filter_dialog_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumb="@mipmap/seekbar_thumb"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:id="@+id/filter_dialog_txt_redius1"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/dark_gray"
                        android:text="@string/radius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/filter_dialog_miles0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/km0"
                        android:inputType="textMultiLine"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/filter_dialog_txt_redius2"
                        android:textColorHint="@color/dark_gray"
                        android:textColor="@color/dark_gray"
                        android:layout_marginRight="@dimen/value_ten"
                        android:text="@string/radius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"/>

                    <TextView
                        android:inputType="textMultiLine"
                        android:id="@+id/filter_dialog_miles100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/km10"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/value_fifteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/filter_dialog_btn"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply_filters"
                android:background="@color/button_color"
                android:textColor="@color/color_white"
                android:layout_marginTop="@dimen/value_thirty"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>
        </LinearLayout>
</RelativeLayout>