<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reportbug_txt_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Report A Bug!"
            android:textStyle="bold"
            android:textColor="@color/splash_color"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_marginTop="@dimen/value_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reportbug_txt_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName :"
                android:textColor="@color/splash_color"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/reportbug_txt_show_userName"
                android:layout_marginLeft="@dimen/value_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User's Name Here"
                android:textColor="@color/splash_color"
                android:gravity="center"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/value_twenty"
            android:background="@color/color_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_ten"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reportbug_edt_write_review"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_fourty"
                android:layout_marginEnd="@dimen/value_twenty"
                android:layout_marginLeft="@dimen/value_ten"
                android:layout_marginRight="@dimen/value_thirty"
                android:layout_marginStart="@dimen/value_twenty"
                android:background="@android:color/transparent"
                android:hint="Share your reviews here"
                android:inputType="text"
                android:maxLines="2"
                android:textCursorDrawable="@null"
                android:textColor="@color/color_black"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/value_twenty"
            android:layout_marginLeft="@dimen/value_thirty"
            android:layout_marginRight="@dimen/value_thirty"
            android:layout_marginStart="@dimen/value_twenty"
            android:background="@color/color_black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/reportbug_button_cancel"
                    android:layout_marginLeft="@dimen/value_twenty_five"
                    android:layout_width="115dp"
                    android:layout_height="@dimen/value_fourty_five"
                    android:layout_marginTop="@dimen/value_fourty"
                    android:background="@color/splash_color"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    android:text="Cancel"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <Button
                    android:id="@+id/reportbug_button_submit"
                    android:layout_marginRight="@dimen/value_twenty_five"
                    android:layout_width="115dp"
                    android:layout_height="@dimen/value_fourty_five"
                    android:layout_marginTop="@dimen/value_fourty"
                    android:textSize="18sp"
                    android:text="Submit"
                    android:textColor="@color/splash_color"
                    android:background="@drawable/border_button"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>