    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_recent_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:id="@+id/dashboard_card_view_my_family_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/value_seven"
                    app:cardBackgroundColor="@color/color_white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_community_member"
                            android:textAllCaps="true"
                            android:text="@string/text_recent_activities"
                            android:textSize="@dimen/text_sub_header"
                            android:textColor="@color/color_white"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_thirty"
                            android:background="@color/cardview_dark_background"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/community_dashboard_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_one_hundred_twenty" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/value_seven"
                        app:cardBackgroundColor="@color/color_white"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_seventy"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">



                            <TextView
                                android:id="@+id/community_text_discover_people"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/value_seventy"
                                android:layout_marginLeft="@dimen/value_fifteen"
                                android:gravity="center"
                                android:text="@string/text_discover_people"
                                android:textColor="@color/color_black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/value_seven"
                        android:layout_marginLeft="@dimen/value_seven"
                        android:layout_marginRight="@dimen/value_seven"
                        app:cardBackgroundColor="@color/color_white"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_seventy"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/community_text_discover_communities"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/value_seventy"
                                android:layout_marginLeft="@dimen/value_fifteen"
                                android:gravity="center"
                                android:text="@string/text_discover_communities"
                                android:textColor="@color/color_black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/value_seven"
                        android:layout_marginLeft="@dimen/value_seven"
                        android:layout_marginRight="@dimen/value_seven"
                        app:cardBackgroundColor="@color/color_white"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_seventy"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/community_text_my_connections"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/value_seventy"
                                android:layout_marginLeft="@dimen/value_fifteen"
                                android:gravity="center"
                                android:text="@string/text_my_connection"
                                android:textColor="@color/color_black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/value_seven"
                        android:layout_marginLeft="@dimen/value_seven"
                        android:layout_marginRight="@dimen/value_seven"
                        app:cardBackgroundColor="@color/color_white"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_seventy"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/community_text_my_communities"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/value_seventy"
                                android:layout_marginLeft="@dimen/value_fifteen"
                                android:gravity="center"
                                android:text="@string/text_my_communities"
                                android:textColor="@color/color_black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/value_seven"
                        android:layout_marginLeft="@dimen/value_seven"
                        android:layout_marginRight="@dimen/value_seven"
                        app:cardBackgroundColor="@color/color_white"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/value_seventy"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/value_fourty"
                                android:layout_height="@dimen/value_fourty"
                                android:layout_marginLeft="@dimen/value_ten"
                                android:src="@mipmap/my_communities" />

                            <TextView
                                android:id="@+id/community_text_resources"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/value_seventy"
                                android:layout_marginLeft="@dimen/value_fifteen"
                                android:layout_marginStart="@dimen/value_fifteen"
                                android:gravity="center"
                                android:text="@string/text_resources"
                                android:textColor="@color/color_black"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
