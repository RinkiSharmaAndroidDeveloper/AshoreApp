<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_fifty"
        android:background="@color/header_color">

        <ImageView
            android:id="@+id/members_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/value_fifteen"
            android:src="@mipmap/right_arrow_toolbar" />

        <TextView
            android:id="@+id/interest_textView_categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/text_add_members"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_header" />

        <TextView
            android:id="@+id/imageview_add_members"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/plus_icon"
            android:gravity="center_vertical"
            android:text="@string/done"
            android:textColor="@color/color_white"
            android:paddingEnd="@dimen/value_twenty"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/members_recyclerView">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/value_twenty"
        android:text="There is no member yet.."
        android:gravity="center"
        android:id="@+id/textView_default_members"
        android:layout_gravity="center"/>

</LinearLayout>