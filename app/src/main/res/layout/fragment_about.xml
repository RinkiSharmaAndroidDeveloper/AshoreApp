<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activation_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/color_white"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <ImageView
        android:layout_gravity="top"
        android:id="@+id/about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_twenty"
        android:contentDescription="@string/profile_pic_icon"
        android:background="@mipmap/description_icon"/>
    <EditText

        android:layout_gravity="center"
        android:id="@+id/edit_text_about"
        android:textColorHint="@color/dark_gray"
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@+id/about_icon"
        android:layout_toEndOf="@+id/about_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:textCursorDrawable="@null"
        android:layout_marginEnd="@dimen/value_thirty"
        android:layout_marginLeft="@dimen/value_ten"
        android:layout_marginRight="@dimen/value_thirty"
        android:layout_marginStart="@dimen/value_ten"
        android:layout_marginTop="@dimen/value_ten"
        android:background="@android:color/transparent"
        android:hint="@string/tell_us_about_youself"
        android:inputType="text|textCapSentences|textMultiLine"
        android:singleLine="true"
        android:textSize="18sp" />
</LinearLayout>
</RelativeLayout>