    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/my_communities_linearLayout_tabs">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/dark_gray"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/community_text_tab1"
                android:id="@+id/my_community_textView_tab1"
                style="@style/styleTabText"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/my_community_relativeLayout_indicator1"
                android:background="@color/dark_gray"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:background="@color/dark_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/dark_gray"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/community_text_tab2"
                android:id="@+id/my_community_textView_tab2"
                style="@style/styleTabText"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/my_community_relativeLayout_indicator2"
                android:layout_alignParentBottom="true"
                android:background="@color/color_light_gray"/>


        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_five"/>

</LinearLayout>