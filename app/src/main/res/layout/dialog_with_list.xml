<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cdof_textView_heading"
            android:text="Heading"
            android:textSize="18dp"
            android:textColor="#585858"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/value_ten"
            android:layout_marginLeft="@dimen/value_twenty_five"
            android:layout_marginRight="@dimen/value_twenty_five"
            android:layout_marginBottom="@dimen/value_ten"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/list_dp_underLine"
            android:background="#E1E1DE"
            android:layout_below="@+id/cdof_textView_heading"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/cdof_recyclerView" />

</LinearLayout>